<%= form_with(model: @basic_information, local: true) do |form| %>
  <% if @basic_information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@basic_information.errors.count, "error") %> prohibited this basic_information from being saved:</h2>

      <ul>
      <% @basic_information.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.label :物件名 %>
  <%= form.text_field :building_name %>
  <%= form.label :賃料 %>
  <%= form.text_field :rent %>円
  <%= form.label :住所 %>
  <%= form.text_field :address %>
  <%= form.label :築年数 %>
  <%= form.text_field :age %>
  <%= form.label :備考 %>
  <%= form.text_area :info %>
  <% 5.times do%>
  <%= form.fields_for :nearest_stations do |nearest| %>
    <%= form.label :路線名 %>
    <%= nearest.text_field :route_name %>
    <%= form.label :駅名 %>
    <%= nearest.text_field :station_name %>
    <%= form.label :徒歩分数 %>
    <%= nearest.text_field :minuites_on_foot %>
   <% end %>
  <% end %>
  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
 
<% end %>
